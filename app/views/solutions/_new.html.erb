<%= form_for @solution, url: {action: "create"}, :html => { :multipart => true } do |f| %>

    <div class="form-group">
        <label for="studentComment">Student comment : </label>
        <%= f.text_area :student_comment, html: {id: "studentComment"}%>
    </div>
    <div class="form-group">
        Mime : <%= f.text_field :mime%>
    </div>
    <div class="form-group">
        File : <%= f.file_field :file %>
    </div>

    <%= f.submit "Create"%>
<% end %>
