<%= form_for @solution, url: {action: "create"}, :html => { :multipart => true } do |f| %>

    <div class="form-group">
        <label for="solution_student_comment">Student comment</label>
        <%= f.text_area :student_comment, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label for="solution_file">File</label>
        <%= f.file_field :file, class: 'form-control' %>
    </div>
    <%= f.submit "Create", class: 'btn btn-primary' %>

<% end %>
