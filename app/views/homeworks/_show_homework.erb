<%= stylesheet_link_tag params[:controller] %>
<%# Snippet from: http://bootsnipp.com/snippets/featured/carousel-product-cart-slider %>
<div class="col-sm-4">
    <div class="col-item">
        <div class="photo">
            <img src="http://placehold.it/350x260" class="img-responsive" alt="a" />
        </div>
        <div class="info">
            <div class="row">
                <div class="price col-xs-6">
                    <h4><%= @homework.title %></h4>
                </div>
                <div class="rating col-xs-6">
                    <%# TODO: Put real values here %>
                    <h5>34 MB</h5>
                    <h5>Word file</h5>
                </div>
            </div>
            <div class="separator clear-left">
                <p class="btn-add">
                    <i class="glyphicon glyphicon-th-list"></i><%= link_to "Solutions", course_homework_solutions_url(@course, @homework) %>
                </p>
                <p class="btn-details">
                    <i class="glyphicon glyphicon glyphicon-download-alt"></i><a href="#">Download</a>
                </p>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </div>
</div>
<div class="col-sm-8">
    <%= @homework.description.html_safe %>
</div>