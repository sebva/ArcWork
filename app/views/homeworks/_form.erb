<%= form_for [@course, @homework] do |f| %>
    <div class="form-group">
        <label for="homework_title">Title</label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label for="homework_title">Description</label>
        <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label for="homework_title">Deadline</label>
        <%= f.datetime_select :due_date, class: 'form-control' %> UTC
    </div>
    <div class="form-group">
        <label for="homework_title">Instructions</label>
        <%= f.file_field :file, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
