<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :role=> 'form') do |f| %>
  <div class="row">
      <div class="form-group col-md-4">
          <%= f.label :email, :for=>'email' %><br />
          <%= f.email_field :email,:id=>'email', :autofocus => true, :class=> 'form-control', :placeholder=> 'Enter your email'%>
      </div>
  </div>

    <div class="row">
        <div class="form-group col-md-4">
            <%= f.label :password, :for=>'password'%><br />
            <%= f.password_field :password,:id=> 'password', :class=> 'form-control', :placeholder=> 'Enter your password'%>
        </div>
    </div>

  <% if devise_mapping.rememberable? -%>
      <div class="row">
          <div class="form-group col-md-12"><%= f.check_box :remember_me, :id=>'checkbox' %> <%= f.label :remember_me, :for=>'checkbox' %></div>
      </div>
  <% end -%>
    <div class="row">
        <div class="form-group col-md-12"><%= f.submit 'Sign in', :class=> 'btn btn-primary' %></div>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
