<%- if controller_name != 'sessions' %>
  <%= link_to "<span class='btn btn-link'>Sign in</span>".html_safe, new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "<span class='btn btn-link'>Sign up</span>".html_safe, new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "<span class='btn btn-link'>Forgot your password?</span>".html_safe, new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "<span class='btn btn-link'>Didn't receive confirmation instructions?</span>".html_safe, new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "<span class='btn btn-link'>Didn't receive unlock instructions?</span>".html_safe, new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "<span class='btn btn-link'>Sign in with #{provider.to_s.titleize}</span>".html_safe , omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
