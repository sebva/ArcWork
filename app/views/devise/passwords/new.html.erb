<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
        <div class="form-group col-md-4"><%= f.label :email, :for=> 'email'%><br />
        <%= f.email_field :email, :autofocus => true , :class=> 'form-control', :id=> 'email', :placeholder=> 'Enter your email'%></div>
    </div>

    <div class="row">
        <div class="for-group col-md-4"><%= f.submit 'Send me reset password instructions', :class=> 'btn btn-primary'%></div>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
