<h1><%= @course.name %> students</h1>
<%= link_to new_user_to_course_course_path, :class => 'btn btn-primary btn-mini' do %>
    <span class="glyphicon glyphicon-plus"></span> Add student to this course
<% end %>
<br /><br />
<table class="searchable_datatable">
    <thead>
    <tr>

        <th>Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>




    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
                <%= link_to destroy_user_from_course_course_path(@course,:user => user),  :method => :delete, :class => 'btn btn-danger btn-mini', confirm:"Are you sure you want to delete the user "+user.name do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
