<h1>Courses</h1>

    <table class="searchable_datatable">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Professor</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <select onchange="location = this.options[this.selectedIndex].value;">
            <% for y in @min_year..@max_year %>
                <option value="?year=<%= y %>" <%= ' selected' if @curr_year == y %>><%= y %> / <%= y+1 %></option>
            <% end %>
        </select>
        <%= link_to new_course_path, :class => 'btn btn-primary btn-mini' do %>
            <span class="glyphicon glyphicon-plus"></span>
        <% end %>


        <% @courses.each do |course| %>
        <tr>
            <td><%= course.id %></td>
            <td><%= course.name %></td>
            <td><%= course.professor.email %></td>
            <td>
                <%= link_to edit_course_path(course), :class => 'btn btn-primary btn-mini' do %>
                    <span class="glyphicon glyphicon-edit"></span>
                <% end %>
                <%= link_to course_path(course), :method => :delete, :class => 'btn btn-danger btn-mini', confirm:"Are you sure you want to delete the course "+course.name do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>

            <% end %>
        </tbody>
    </table>
