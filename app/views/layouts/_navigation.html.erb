<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#aw-navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <%= link_to "ArcWork", home_index_path, class: 'navbar-brand' %>
        <div class="collapse navbar-collapse" id="aw-navbar">
            <ul class="nav navbar-nav">
                <%= render 'layouts/navigation_links' %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                <% if user_signed_in? %>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name_not_null %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <%= link_to edit_user_options_user_path(current_user) do %>
                                <span class="glyphicon glyphicon-user"></span> Edit account informations
                            <% end %>
                            <%= link_to destroy_user_session_path, method: :delete do %>
                                <span class="glyphicon glyphicon-off"></span> Log out
                            <% end %>
                        </li>
                    </ul>
                <% else %>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <div class="border-form-div">
                                <!--source https://github.com/plataformatec/devise/wiki/How-To:-Display-a-custom-sign_in-form-anywhere-in-your-app-->
                                <%= form_for(:user, :class => "well", :url => session_path(:user)) do |f| %>
                                    <div class="form-group col-xs-12">
                                        <%= f.text_field :email, :class => "form-control" %>
                                    </div>
                                    <div class="form-group col-xs-12">
                                        <%= f.password_field :password, :class => "form-control" %>
                                    </div>
                                    <div class="form-group col-xs-12">
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me, :class => 'visible-xs', :style => 'color: white;' %>
                                        <%= f.label :remember_me, :class => 'hidden-xs' %>
                                    </div>
                                    <div class="col-xs-12 form-group btn-group-vertical">
                                        <%= f.submit 'Sign in', :class => "btn btn-primary btn-block" %>
                                        <%= link_to  "Sign up", new_registration_path(:user), :class => 'btn btn-default btn-block' %>
                                    </div>
                                <% end %>
                            </div>
                        </ul>
                    </li>
                <% end %>
                </li>
            </ul>
        </div>
    </div>
</nav>
